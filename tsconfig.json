{
  "compilerOptions": {
    "declaration": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2018",
    "outDir": "dist",
    "lib": ["es2018"],
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["dist", "__mocks__/**", "**/__mocks__/**", "**/*.test.ts", "node_modules"]
}
